<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/achtergrondoptie"
    android:backgroundTint="#3677B255"
    tools:context=".ui.home.HomeFragment">


    <ImageButton
        android:id="@+id/navigation_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="292dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="79dp"
        android:background="@drawable/roundedcornerbutton"
        android:src="@drawable/ic_launcher_edit_foreground" />

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="352dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/roundedcornerbutton"
        android:src="@drawable/ic_launcher_settings_foreground" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="226dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/roundedcornerbutton"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/currentPlantImage"
        android:layout_width="137dp"
        android:layout_height="158dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="201dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="19dp"
        android:src="@drawable/fotogroeibox" />

    <ImageButton
        android:id="@+id/btnLiveview"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="288dp"
        android:layout_marginEnd="58dp"
        android:background="@drawable/roundedcornerbutton"
        android:backgroundTint="#77B255"
        android:src="@drawable/ic_launcher_camera_foreground" />


</RelativeLayout>